<!DOCTYPE html>  

<html> 

<head>

<script type="text/javascript">

function startOperation(){		
	
		var email = prompt("Please enter your email ID");
		
                var length = email.length;
		
		var i = 0;
		
		var j = 0;

		document.write("<br>Your secure email address is "+email[0]+email[1]+email[2]+email[3]);

		for(i = 4; i<length;i++){
			
			if(email[i] === '@'){
				
				for(j=i;j<length;j++){
					
				document.write(email[j]);
				
}
				break;	
			
				}
				
			document.write("*");	
			
		}		
		
		document.write("");
	
		}
		
	</script>
	
	</head>

<body>
	<button onclick="startOperation()">Click Here to start</button>

</body>

</html>
